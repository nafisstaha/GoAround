@model IEnumerable<GoAround.Models.Category>

@{ ViewData["Title"] = "Choose Your Category"; }

<h1>Choose Your Category Here!</h1>

<section class="row card-group">
    @foreach (var c in Model)
    {
        <div class="col-lg-4 mb-3">
            <div class="card mb-4 text-center h-100">
                <div class="card-body">
                    <a asp-controller="Shop" asp-action="ChooseYourCategory" asp-route-id="@c.CategoryId">@c.Name</a>
                </div>
            </div>
        </div>
    }
</section>